@model Activity
@{
    Layout = "_Layout";
}
<div class="card p-4 shadow-sm">
    <h1>Vill du verkligen ta bort denna aktivitet?</h1>

    <div>
        <div class="delete-tags">Id: @Html.DisplayFor(model => model.Id)</div>
    </div>
    <div>
        <div class="delete-tags">Innehåll: @Html.DisplayFor(model => model.Title)</div>
    </div>
    <div>
        <div class="delete-tags">Beskrivning: @Html.DisplayFor(model => model.Description)</div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="form-group text-center">
            <input type="submit" value="Ta bort aktivitet" class="btn btn-danger" />
        </div>
    </form>
</div>