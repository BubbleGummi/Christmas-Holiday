@model Activity
@{
    Layout = "_Layout";
}

<h1 class="mb-4">Ändra information om aktiviteter</h1>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label for="Title" class="form-label">Titel:</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="Description" class="form-label">Beskrivning:</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="MemberId" class="form-label">Deltagare:</label>
        <select asp-for="MemberId" class="form-control" asp-items="@(new SelectList(ViewBag.MembersDropdown, "Value", "Text", Model.MemberId))">
            <option value="">Ingen medlem</option>
        </select>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="form-group text-center">
        <input type="submit" value="Spara" class="btn btn-primary" />
    </div>
</form>
