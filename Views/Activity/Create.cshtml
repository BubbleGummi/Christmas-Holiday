@model Christmas_Holiday.Models.Activity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Lägg till fler aktiviteter</title>
</head>
<body>
    <h1>Lägg till fler aktiviteter</h1>

    <form asp-action="Create" method="post">
        <div>
            <label for="Title">Titel:</label>
            <input asp-for="Title" id="Title" />
        </div>

        <div>
            <label for="Description">Beskrivning:</label>
            <input asp-for="Description" id="Description" />
        </div>

        <div>
            <label for="MemberId">Deltagare:</label>
            <select asp-for="MemberId" asp-items="ViewBag.MemberId">
                <option value="">Välj deltagare</option>
            </select>
        </div>
        @if (ViewBag.Id != null)
        {
            <ul>
                @foreach (var item in ViewBag.Id.Items)
                {
                    <li>@item.Text (@item.Value)</li>
                }
            </ul>
        }
        else
        {
            <p>ViewBag.Id is null</p>
        }



        <div>
            <input type="submit" value="Spara" />
        </div>
    </form>
</body>
</html>
