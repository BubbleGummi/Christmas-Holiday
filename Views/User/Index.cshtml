@model UserModel
@{
    Layout = "_Layout";
}
<form asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]">
    <table>
        <tr>
            <td>Användarnamn</td>
            <td>@Html.EditorFor(m => m.Username)</td>
        </tr>
		<tr>
			<td>Lösenord</td>
			<td>@Html.EditorFor(m => m.Password)</td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="Logga in" /></td>
            </tr>
    </table>
</form>
<p>
	@ViewBag.ErrorMessage
</p>
<p>
    <a asp-action="SignOutUser">Logga ut</a>
</p>